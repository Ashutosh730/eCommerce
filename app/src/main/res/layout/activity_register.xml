<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/register_applogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/applogo" />

    <EditText
        android:id="@+id/register_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_phone_number_input"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/input_design"
        android:hint="Name"
        android:padding="20dp"
        android:textColor="@color/pink"
        android:textColorHint="@color/pink"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/register_phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_password_input"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/input_design"
        android:hint="Phone"
        android:inputType="phone"
        android:padding="20dp"
        android:textColor="@color/pink"
        android:textColorHint="@color/pink"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_btn"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/input_design"
        android:hint="Password"
        android:padding="20dp"
        android:textColor="@color/pink"
        android:textColorHint="@color/pink"
        android:textSize="22sp" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="22sp"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:background="@drawable/button"/>

</RelativeLayout>